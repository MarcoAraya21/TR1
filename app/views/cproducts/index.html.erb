            <p> <strong> RUT Usurario: </strong>  <%= cproduct.User.Rut %> </p>
            <p> <strong> Categoria Producto: </strong> <%= cproduct.Pcategory.Nombre %> </p>
            <p> <strong> Estado Producto: </strong> <%= cproduct.Status.Nombre %> </p>
            <p> <strong> Marca Producto:  </strong> <%= cproduct.Trademark.Nombre %> </p>

            <div class="buttons" style= "margin-top: 10px; margin-bottom: 10px">
            <%= link_to 'Mostrar', cproduct %></td>
            </div>

          </div>
        </div>
      </div>
    </div>
    
