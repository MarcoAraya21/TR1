<% if user_signed_in? %> 
<p id="notice"><%= notice %></p>

  <% if current_user.usertype_id == 3%>
  <div class="container">
    <div class="thumbnail">
      <h1>Mis Productos</h1>
    </div>
  </div>
  
  <% if @cproducts.where(:User_id => current_user.id).count == 0%>
      No Tiene Productos en Reparacion.
  <%else%>

    <% @cproducts.where(:User_id => current_user.id).each do |cproduct| %>
    <div class="container">
      <div class="col-md-4">
        <div class="thumbnail">
          <%= image_tag cproduct.Imagen, :alt => cproduct.Imagen,class: 'imagen_cproduct'%>
          </br>
          <p> <strong> Nombre Producto: </strong>  <%= cproduct.Nombre %> </p>
          <p> <strong> Nombre Producto: </strong> <%= cproduct.Descripcion %> </p>
          <p> <strong> Nombre Usuario: </strong> <%= cproduct.User.Nombre %> </p>
          <p> <strong> RUT Usurario: </strong>  <%= cproduct.User.Rut %> </p>
          <p> <strong> Categoria Producto: </strong> <%= cproduct.Pcategory.Nombre %> </p>
          <p> <strong> Estado Producto: </strong> <%= cproduct.Status.Nombre %> </p>
          <p> <strong> Marca Producto:  </strong> <%= cproduct.Trademark.Nombre %> </p>

          <div class="buttons" style= "margin-top: 10px; margin-bottom: 10px">
          <%= link_to 'Mostrar', cproduct %></td>
          <% if current_user.usertype_id == 2%>
            <%= link_to 'Editar', edit_cproduct_path(cproduct) %></td>
          <%end%>
          </div>

        </div>
      </div>
    </div>
    
    <% end %>

<br>
<%end%><%end%><%end%>



