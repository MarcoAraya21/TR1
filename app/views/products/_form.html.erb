<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Formulario de creacion de Productos -->
    <div class="form-group">

      <div class="field">
        <%= f.label :Nombre %><br>
        <%= f.text_field :Nombre, autofocus: true, class: "form-control", placeholder: "Ingresa nombre del Producto" %>
      </div>
      <div class="field">
        <%= f.label :Descripcion %><br>
        <%= f.text_area :Descripcion, class: "form-control", placeholder: "Ingresa descripciÃ³n del producto" %>
      </div>
      <div class="field">
        <%= f.label :Precio %><br>
        <%= f.number_field :Precio, class: "form-control", placeholder: "Ingresa precio del producto" %>
      </div>
      <div class="field">
        <%= f.label :Stock %><br>
        <%= f.number_field :Stock, class: "form-control", placeholder: "Ingresa stock del producto" %>
      </div>
      <div class="field">
        <%= f.label :Imagen %><br>
        <%= f.text_field :Imagen, class: "form-control", placeholder: "Ingresa imagen del producto" %>
      </div>
      <div class="field">
      <%= f.collection_select  :Ptype_id,Ptype.order(:id),:id,:Nombre,prompt: "Seleccione Tipo"%>
      </div>
      <div class="field">
      <%= f.collection_select  :Pcategory_id,Pcategory.order(:id),:id,:Nombre,prompt: "Seleccione Categoria"%>
      </div>
      <div class="field">
      <%= f.collection_select  :Status_id,Status.limit(2).order(:id),:id,:Nombre,prompt: "Seleccione Estado"%>
      </div>
      <div class="field">
      <%= f.collection_select  :Trademark_id,Trademark.order(:id),:id,:Nombre,prompt: "Seleccione Marca"%>
      </div>
      
      <div class="actions">
        <%= f.submit %>
      </div>
    
    </div>

<% end %>
