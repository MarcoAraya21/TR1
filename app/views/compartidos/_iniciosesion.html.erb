<div class="container">
	<form class="form-horizontal">
		<div class="col-md-6 col-md-offset-3">
			<div class="well">
  			<legend><h2>Iniciar Sesión</h2></legend>
				
				<!-- email -->
    		<div class="form-group">
      		<label for="inputEmail" class="col-lg-2 control-label">Email</label>
      		<div class="col-lg-10">
        		<input type="text" class="form-control" name="email" placeholder="@Email">
      		</div>
    		</div>
    		<!-- contraseña -->
    		<div class="form-group">
      		<label for="inputPassword" class="col-lg-2 control-label">Contraseña</label>
      		<div class="col-lg-10">
        		<input type="text" class="form-control" name="password" placeholder="Contraseña">
      		</div>
    		</div>
    	
    	</div>
		</div> 
  </form>
</div>

<% if user_signed_in? %> 
<p id="notice"><%= notice %></p>

    <% if current_user.usertype_id == 3%>
      <h1>Mis Productos</h1>
        <% if @cproducts.where(:User_id => current_user.id).count == 0%>
          No Tiene Productos en Reparacion.
        <%else%> 

      <% @cproducts.where(:User_id => current_user.id).each do |cproduct| %>
        <div class="col-md-3">
          <div class="thumbnail">
            <%= image_tag cproduct.Imagen, :alt => cproduct.Imagen, width:150 ,heigth:20%>
            <br/>
            <p> <strong> Nombre Producto: </strong> <%= cproduct.Nombre %> <p>
            <p> <strong> Descripción: </strong> <%= cproduct.Descripcion %> <p>
            <p> <strong> Nombre Usuario: </strong> <%= cproduct.User.Nombre %> <p>
            <p> <strong> RUT Usuario: </strong> <%= cproduct.User.Rut %> <p>
            <p> <strong> Categoria Producto: </strong> <%= cproduct.Pcategory.Nombre %> <p>
            <p> <strong> Estado Producto: </strong> <%= cproduct.Status.Nombre %> <p>
            <p> <strong> Marca Producto: </strong> <%= cproduct.Trademark.Nombre %> <p>

            <div class="buttons" style= "margin-top: 10px; margin-bottom: 10px">
              <%= link_to 'Mostrar', cproduct %>
              <% if current_user.usertype_id == 2%>
                <%= link_to 'Editar', edit_cproduct_path(cproduct) %>
              <%end%>
            </div>
          </div>
        </div>

  <%end%><%end%><%end%>

  <% if current_user.usertype_id == 1%>
    <h1>Productos Cliente</h1>
    <% @cproducts.each do |cproduct| %>

    <div class="col-md-3">
      <div class="thumbnail">
        <%= image_tag cproduct.Imagen, :alt => cproduct.Imagen, class: 'imagen_cproduct', class: 'img-responsive' %>
        <br/>
        <p> <strong> Nombre Producto: </strong> <%= cproduct.Nombre %> <p>
        <p> <strong> Descripción: </strong> <%= cproduct.Descripcion %> <p>
        <p> <strong> Nombre Usuario: </strong> <%= cproduct.User.Nombre %> <p>
        <p> <strong> RUT Usurario: </strong> <%= cproduct.User.Rut %>
        <p> <strong> Categoria Producto: </strong> <%= cproduct.Pcategory.Nombre %> <p>
        <p> <strong> Estado Producto: </strong> <%= cproduct.Status.Nombre %> <p>
        <p> <strong> Marca Producto: </strong> <%= cproduct.Trademark.Nombre %> <p>
        
        <div class="buttons" style= "margin-top: 10px; margin-bottom: 10px">
          <%= link_to 'Mostrar', cproduct , class: 'btn btn-primary'%>
          <% if current_user.usertype_id == 2%>
            <%= link_to 'Editar', edit_cproduct_path(cproduct), class: 'btn btn-primary' %>
          <%end%>
        </div>
      </div>
    </div>

        <% end %>
      <%= link_to 'Nuevo Cproducto', new_cproduct_path ,%>
  <%end%>